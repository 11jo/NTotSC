IF
  Global("NTTalkedToHasdar","GLOBAL",4)
  !Dead("NTHASDAR")
THEN
  RESPONSE #100
    CreateCreature("NTHASDAR",[233.268],0)
    SetGlobal("NTTalkedToHasdar","GLOBAL",5)
    Wait(1)
END

IF
  Dead("NTDRAAGI")
