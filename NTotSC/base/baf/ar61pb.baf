THEN
  RESPONSE #100
    EraseJournalEntry(@10017)
    EraseJournalEntry(@10020)
    EraseJournalEntry(@10037)
    EraseJournalEntry(@10059)
    EraseJournalEntry(@10085)
    AddJournalEntry(@10102,QUEST_DONE)
    SetGlobal("NT_DestroyedCult","MYAREA",1)
END

